@model NewOnlineExam.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutForms.cshtml";
}

<a href="@Url.Action("Index", "Home")" class="btn btn-default">Back to Home</a>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="text-center border border-light p-5">

        <p class="h4 mb-4">Sign up</p>
        <div class="md-form">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            @Html.LabelFor(m => m.FullName, new { @class = "mb-4" })
        </div>
        <div class="md-form">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.LabelFor(m => m.Email, new { @class = "mb-4" })
        </div>
        <div class="md-form">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.LabelFor(m => m.Password, new { @class = "mb-4" })
        </div>
        <div class="md-form">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "mb-4" })
        </div>

        <button class="btn btn-info btn-block my-4" type="submit">Sign Up</button>

        <p>
            Already have an account?
            <a href="@Url.Action("Login", "Account")">Sign In</a>
        </p>

        <p>or sign up with:</p>

        <a href="#" class="mx-2" role="button"><i class="fab fa-facebook-f light-blue-text"></i></a>
        <a href="#" class="mx-2" role="button"><i class="fab fa-twitter light-blue-text"></i></a>
        <a href="#" class="mx-2" role="button"><i class="fab fa-linkedin-in light-blue-text"></i></a>
        <a href="#" class="mx-2" role="button"><i class="fab fa-github light-blue-text"></i></a>
    </div>
