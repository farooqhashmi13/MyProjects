@{
}

<style>
    select {
        font-size: 1.3rem !important;
        box-shadow: none !important;
    }

    a {
        text-decoration: none;
    }

        a:hover {
            text-decoration: none;
        }

    .card:hover {
        box-shadow: 0px 0px 5px;
    }
</style>

<div class="row">
    <div class="col-md-6">
        <label>Select Subject</label>
        <select id="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
    </div>
</div>
<br />
<br />
<label>Select Exam Category</label>
<div class="row">
    <div class="col-md-4">
        <a href="javascript:void(0)" onclick="StartExam('short')">
            <div class="card border-info text-center">
                <div class="card-body">
                    <h3>Short</h3>
                    <p>
                        Total Questions: 15<br />
                        Time: 15 min
                    </p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="javascript:void(0)" onclick="StartExam('medium')">
            <div class="card border-info text-center">
                <div class="card-body">
                    <h3>Medium</h3>
                    <p>
                        Total Questions: 50<br />
                        Time: 50 min
                    </p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="javascript:void(0)" onclick="StartExam('long')">
            <div class="card border-info text-center">
                <div class="card-body">
                    <h3>Long</h3>
                    <p>
                        Total Questions: 100<br />
                        Time: 100 min
                    </p>
                </div>
            </div>
        </a>
    </div>
</div>

@section scripts{
    <script>

        function StartExam(type) {
            var subject = $('#SubjectId').val();

            window.location.href = "/exam/start?type=" + type + "&subject=" + subject;

        }

    </script>
}
